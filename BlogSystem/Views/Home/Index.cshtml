@model IEnumerable<PostViewModel>

@foreach (var post in Model)
{
    <div class="post-preview">
        <a href="post.html">
            <h2 class="post-title">
               @post.Title
            </h2>
            <h3 class="post-subtitle">
                @post.Content
            </h3>
        </a>
        <p class="post-meta">Posted by <a href="#">@post.Author</a> on @post.CreatedOn</p>
    </div>
    <hr>
}

