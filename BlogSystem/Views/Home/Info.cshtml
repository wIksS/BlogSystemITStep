@model PostViewModel

<header class="intro-header" style="background-image: url('/Images/computer-coffee.jpg')">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="post-heading">
                    <h1>@Model.Title</h1>
                    <h2 class="subheading">@Html.Raw(Model.SubHeader)</h2>
                    <span class="meta">Posted by <a href="#">@Model.Author</a> on @Model.CreatedOn</span>
                </div>
            </div>
        </div>
    </div>
</header>
<!-- Post Content -->
<article>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
            @Html.Raw(Model.Content)
            </div>
        </div>
    </div>
</article>